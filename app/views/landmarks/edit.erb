<h3>Edit Landmark</h3>
<form method="post" action="/landmarks/<%=@landmark.id%>">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input type="text" name="landmark[name]" value="<%=@landmark.name%>" id="name"></input>

  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" value="<%=@landmark.year_completed%>" id="year_completed"></input>

  <input type="submit" value="Edit Landmark"></input>


</form>
