views/figures/edit.erb
<h2>Edit Figure</h2>
<form method="post" action="/figures/<%=@figure.id%>">

  <input type="hidden" name="_method" value="PATCH">

  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></input>
  <br></br>

  <h3>Choose Associated Titles: </h3>
  <% @titles.each do |title| %>
    <label> <%= title.name %> </label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>></input>
    <br></br>
  <% end %>
  <br></br>

  <label>Create New Title: </label><br></br>
  <label>Name: </label>
  <input type="text" name="title[name]" id="new_title"></input>
  <br></br>
  <br></br>

  <h3>Choose Associated Landmarks: </h3>
  <% @landmarks.each do |landmark| %>
    <label> <%= landmark.name %> </label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"<%="checked" if @figure.landmarks.include?(landmark)%>></input><br></br>
  <% end %>
  <br></br>

  <label>Create New Landmark: </label><br></br>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <label>Year Completed: </label>
  <input type="text" name="landmark[year_completed]"></input>
  <br></br>

  <input type="submit" value="Edit Figure"></input>

</form>
